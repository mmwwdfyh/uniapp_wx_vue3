{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "allowJs": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "types": [
      "@dcloudio/types",
      "vue"
    ],
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/uni_modules",
    "node_modules",
  ]
}